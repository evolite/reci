// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  passwordHash          String
  name                  String?
  isAdmin               Boolean   @default(false)
  emailVerified         Boolean   @default(false)
  emailVerificationToken String?
  passwordResetToken    String?
  passwordResetExpires  DateTime?
  createdAt             DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  createdInvites        Invite[]  @relation("CreatedBy")
  usedInvite            Invite?   @relation("UsedBy")
  recipes               Recipe[]
  shoppingCart          ShoppingCart?

  @@map("users")
}

model Invite {
  id          String    @id @default(uuid())
  token       String    @unique
  email       String?
  createdById String
  usedById    String?   @unique
  usedAt      DateTime?
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  createdBy   User      @relation("CreatedBy", fields: [createdById], references: [id])
  usedBy      User?     @relation("UsedBy", fields: [usedById], references: [id])

  @@index([token])
  @@map("invites")
}

model Recipe {
  id              String   @id @default(uuid())
  videoUrl        String   @unique
  videoPlatform   String?  // Optional platform identifier (e.g., "youtube", "instagram", "tiktok")
  thumbnailUrl    String
  description     String   @default("")
  dishName        String
  cuisineType     String
  ingredients     String[] @default([]) // Full ingredients list with amounts (e.g., "2 dl milk", "500 g flour")
  tags            String[] @default([]) // User-added tags
  instructions    String?  // Recipe instructions/steps (without ingredients)
  userId          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User?    @relation(fields: [userId], references: [id])

  @@index([dishName])
  @@index([cuisineType])
  @@map("recipes")
}

model Waitlist {
  id        String   @id @default(uuid())
  email     String   @unique
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("waitlist")
}

model ShoppingCart {
  id            String   @id @default(uuid())
  userId        String   @unique
  recipeIds     String[] @default([])
  shoppingList  Json     // ShoppingListResponse structure
  checkedItems  String[] @default([])
  shareToken    String?  @unique // UUID for sharing
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([shareToken])
  @@map("shopping_carts")
}

model Setting {
  key         String   @id
  value       String
  description String?
  updatedAt   DateTime @updatedAt

  @@map("settings")
}
